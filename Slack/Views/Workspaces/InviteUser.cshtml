@model Slack.Models.WorkspaceViewModels.InviteUserViewModel
@{
    ViewData["Title"] = "Invite to " + Model.WorkspaceName;
}
<div>
    <h4>Invite users to @Model.WorkspaceName workspace</h4>
    <hr />

    <form asp-action="InviteUser">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="EmailAddress" class="control-label"></label>
            <input asp-for="EmailAddress" class="form-control" />
            <input asp-for="WorkspaceName" value=@Model.WorkspaceName type="hidden"/>
            <input asp-for="InviterName" value=@Model.InviterName type="hidden" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="InviteUser" class="btn btn-default" />
        </div>
    </form>

</div>
<br />
<div>
    <a asp-action="Messages" asp-route-id="@Model.WorkspaceName">Go Back</a>
</div>